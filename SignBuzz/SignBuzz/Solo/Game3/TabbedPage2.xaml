<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SignBuzz.Solo.Game3.TabbedPage2"
             BackgroundColor="#feffdb">
  <!--Pages can be added as references or inline-->
    <ContentPage Title="ex1">
        <StackLayout>
        <Grid x:Name="timer1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="25*"/>
                <ColumnDefinition Width="20*"/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="25*"/>
                <ColumnDefinition Width="25*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0"/>
            <Label Grid.Column="1" x:Name="_minuteView1"   VerticalOptions="Fill" HorizontalOptions="Fill" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" FontSize="35"/>
            <Label Grid.Column="2" Text=" : " FontSize="25" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
            <Label Grid.Column="3" x:Name="_secondView1" VerticalOptions="Fill" HorizontalOptions="Fill" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" FontSize="35"/>
            <Grid Grid.Column="4"/>
        </Grid>
            <Grid VerticalOptions="Center" IsVisible="True" x:Name="firstQ" Margin="30">
            <Button Clicked="Btn_handler_firstQ" WidthRequest="60" HorizontalOptions="Center" HeightRequest="60" BackgroundColor="red"
                        BorderColor="red" BorderWidth="2" BorderRadius="30" Grid.Row="1"  Grid.Column="0" Text="a" />
            <Button Clicked="Btn_handler_firstQ" WidthRequest="60" HorizontalOptions="Center" HeightRequest="60" BackgroundColor="AliceBlue" Text="c" 
                        BorderColor="red" BorderWidth="2" BorderRadius="30" Grid.Row="1" Grid.Column="1"/>
            <Button Clicked="Btn_handler_firstQ" WidthRequest="60" HorizontalOptions="Center" HeightRequest="60" BackgroundColor="Green" Text="b"
                        BorderColor="Red" BorderWidth="2" BorderRadius="30" Grid.Row="1" Grid.Column="2"/>
        </Grid>
        <Label x:Name="finish1" TextColor="Lime" FontSize="Large" Text="DONE!" IsVisible="False" HorizontalOptions="Center">
            <Label.FontFamily>
                <OnPlatform x:TypeArguments="x:String">
                    <On Platform="iOS" Value="MarkerFelt-Thin" />
                    <On Platform="Android" Value="Sniglet-Regular.ttf#LSniglet-Regular" />
                </OnPlatform>
            </Label.FontFamily>
        </Label>
        </StackLayout>
    </ContentPage>
